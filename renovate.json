{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all minor dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true,
      "labels": ["dependencies"]
    }
  ]
}
