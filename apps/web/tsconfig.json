{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Web",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client",
      "mdx"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "Node16"
    }
  }
}
