{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "SSR",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    "jsx": "react",
    "esModuleInterop": true
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "compilerOptions": {
      "moduleResolution": "Node16"
    }
  }
}
