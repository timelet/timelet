{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:dev": {
      "outputs": ["dist/**"],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build:dev"],
      "cache": false,
      "persistent": true
    }
  }
}
